{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true
  },
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": false,
    "debug": false
  },
  "files": [
    "node_modules/typescript/lib/lib.es6.d.ts",
    "test/app.module.ts",
    "src/ng2grid.module.ts",
    "src/components/AwGrid.ts",
    "src/components/Cell.ts",
    "src/components/HeaderColumn.ts",
    "src/components/Page.ts",
    "src/directives/liveScroll.ts",
    "src/directives/ColumnResizer.ts",
    "src/directives/ResizePlaceHolder.ts",
    "src/components/Row.ts",
    "test/main.ts",
    "src/models/enums.ts",
    "src/models/GridModels.ts",
    "src/services/GridDataService.ts",
    "src/services/GridReactiveServices.ts",
    "src/services/ColumnResizeService.ts"
  ],

  "exclude": [
    "node_modules",
    "src/**/*.d.ts"
  ]
}
